#cos function
import pandas as pd
from matplotlib import pyplot as plt
columns =["X","COSX"]
df = pd.read_csv(r'C:\Users\HP\Desktop\MY_ASSINGMENTS\cos_data.csv',usecols=columns)
print("Contents in csv file:\n",df)
plt.plot(df.X,df.COSX)
plt.show()
#sin function
import matplotlib.pyplot as plt
import numpy as np
fig =plt.figure()
ax=fig.add_subplot(1,1,1)
x=np.linspace(0,20,50)
y=np.sin(x)
ax.plot(x,y,'-o',label="sine")
plt.show()
